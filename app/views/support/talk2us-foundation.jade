extends ../layouts/layout-foundation

block content
  div(ng-app="talk2us", ng-controller='ChatCtrl')
    .row.panel
        .large-12.columns
            .row
                .large-12.columns
                    a(href='#')
                        h3.text-center Talk2us
                .large-4.columns.contain-to-grid
                    .button-bar
                        ul.button-group
                            li
                                button.widget-button.small
                                    i.icon-facetime-video.icon-large(style='color:green')
                            li
                                button.widget-button.small
                                    i.icon-volume-off.icon-large(style='color:red')
                        ul.button-group.right(style='margin-right:0')
                            li
                                button.widget-button.small
                                    i.icon-resize-small.icon-large(style='color:green')
                            li
                                button.widget-button.small#connectbtn(disabled onclick='connect()')
                                    i.icon-phone.icon-large(style='color:blue')
                    .videopanel
                        video#remote-video(autoplay='autoplay', height='240px', width='320px')
                      .panel(style='position:absolute;top:190px;left:180px;height:80px;width:120px;')
                        video#local-video(autoplay='autoplay', height='80px', width='120px')

                .large-8.columns
                    .contain-to-grid
                        .button-bar
                            ul.button-group.right(style='margin-right:0')
                                li
                                    button.widget-button.small
                                        i.icon-remove.icon-large(style='color:red')
                        .videopanel(style='height:100px; margin:0px;overflow-y: scroll', ng-repeat='mymessage in myMsg')
                            p(style='centre') {{mymessage.date}}
                            p(ng-repeat='mymessage1 in mymessage.msg') {{mymessage1.user}}: {{mymessage1.text}}: {{mymessage1.time}}
                        .row.collapse
                            form(ng-submit='sendMessage()')
                                .large-9.columns
                                    input(type="text", placeholder="Send a message", name='msg',style='margin:0px',
                                    ng-model='message')
                                .large-3.columns
                                    button.alert.small.radius(type='submit', value='Login', style='width:100%;margin:0;') Send

