extends ../layouts/layout-foundation

block content
    div#root(ng-controller="AdminCtrl")
      .row
        .large-12.columns
            .panel.callout
                include ../includes/thin-header
      .row
        include ../includes/admin-navbar

        .large-10.columns
          h4 Manage Users
          table(width='100%')
                thead
                    tr
                        th(width="20%").text-center User Name
                        th(width="35%").text-center Email
                        th(width="15%").text-center Role
                        th(width="15%").text-center Logged-in via
                        th(width="15%")
                            a.button.small(href="#", data-reveal-id="myModal") Add
                tbody
                    tr(ng-repeat="user in users", edit-user="user", roles="roles")
      #myModal.reveal-modal.small
        .row.collapse
          label Please enter the email ID
          .large-8.columns
              input(type="text", placeholder="provider email")
          .large-4.columns
              span.prefix.button.alert Submit
        .row.collapse
          .large-2.columns
              label(for="role-field").right Role&nbsp
          .large-6.left.columns
              select#role-field(ng-model="selectedRole", ng-options="role for role in roles")
        a.close-reveal-modal &#215;

      #root_footer


        //.large-4.columns
            h6 Title of Side Panel
            form
                fieldset
                    .row
                        .large-12.columns
                            label Input Label
                            input(type="text", placeholder="placeholder")
                    .row
                        .large-4.columns
                            label Label
                            input(type="text", placeholder="placeholder")
                        .large-8.columns
                            .row.collapse
                                label Label
                                .small-4.columns
                                    span.prefix.button http://
                                .small-8.columns
                                    input(type="text", placeholder="placeholder")
                    .row
                        .large-12.columns
                            label Textarea
                            textarea( placeholder="textarea")
                    .row
                        .large-12.columns
                            button.small.alert.radius.right(type='submit') Update

    include ../includes/footer